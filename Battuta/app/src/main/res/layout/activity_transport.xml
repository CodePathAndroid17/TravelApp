<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/greenBackground4"
        android:layout_width="635dp"
        android:layout_height="966dp"
        android:layout_marginStart="-122dp"
        android:layout_marginTop="-213dp"
        android:layout_marginEnd="-102dp"
        android:layout_marginBottom="-22dp"
        app:srcCompat="@drawable/bg_green" />

    <ImageView
        android:id="@+id/whiteBackground4"
        android:layout_width="413dp"
        android:layout_height="219dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-4dp"
        android:layout_marginTop="-42dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="554dp"
        app:srcCompat="@drawable/top" />

    <TextView
        android:id="@+id/tvTransportation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Pick Your Transportation"
        android:textColor="#000000"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/leftBtn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="50dp"
        android:layout_marginBottom="50dp"
        android:background="@null"
        android:gravity="center"
        app:srcCompat="@drawable/icons_light_back" />

    <Button
        android:id="@+id/nextBtn4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/btn_next"
        android:fontFamily="@font/montserrat"

        android:text="        NEXT"
        android:textAlignment="textStart"
        android:textColor="#FFFFFF" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTransportationList"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="110dp" />

</RelativeLayout>